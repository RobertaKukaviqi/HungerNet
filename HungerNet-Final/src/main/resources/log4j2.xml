<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="debug">


    <Appenders>
        <File name="LogToFile" fileName="logs.log" append="true">
            <PatternLayout>
                <Pattern>[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>
    <Loggers>
        <Root level="info">

            <AppenderRef ref="LogToFile"/>
        </Root>
    </Loggers>

</Configuration>

